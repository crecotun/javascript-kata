{
  "name": "javascript-kata-1",
  "version": "1.0.0",
  "description": "Code kata in JavaScript where you have to write a library of books and magazines.",
  "private": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denkwai/javascript-kata-1.git"
  },
  "keywords": [
    "javascript",
    "kata"
  ],
  "author": "Anton Pryshchepa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/denkwai/javascript-kata-1/issues"
  },
  "dependencies": {
    "mobx": "^5.15.6",
    "mobx-react": "^6.3.0",
    "papaparse": "^5.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.4.3"
  },
  "devDependencies": {
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "typescript": "^4.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:node/recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "import",
      "node",
      "react"
    ],
    "rules": {
      "brace-style": [
        "error",
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 1,
          "maxBOF": 1
        }
      ],
      "no-trailing-spaces": "error",
      "node/no-unsupported-features/es-syntax": [
        "off",
        {
          "version": ">=8.0.0",
          "ignores": []
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "one-var": [
        "error",
        {
          "uninitialized": "always",
          "initialized": "never"
        }
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "off"
      ],
      "quote-props": [
        "error",
        "as-needed"
      ],
      "sort-imports": "off",
      "strict": "off"
    },
    "overrides": [
      {
        "files": [
          "test/helpers/*.js"
        ],
        "rules": {
          "node/no-unpublished-require": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
